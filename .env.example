# 文字起こしツール 環境変数サンプル
# このファイルを.env.localにコピーして実際の値を設定してください

# AWS Amplify設定
NEXT_PUBLIC_AWS_REGION=ap-northeast-1
NEXT_PUBLIC_AWS_USER_POOLS_ID=ap-northeast-1_xxxxxxxxx
NEXT_PUBLIC_AWS_USER_POOLS_WEB_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx

# 文字起こしAPI設定
# 使用するAPIを指定: elevenlabs または dify
NEXT_PUBLIC_TRANSCRIPTION_API=elevenlabs

# ElevenLabs API設定
NEXT_PUBLIC_ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Dify API設定
NEXT_PUBLIC_DIFY_API_KEY=your_dify_api_key_here
NEXT_PUBLIC_DIFY_MINUTES_API_KEY=your_dify_minutes_api_key_here
NEXT_PUBLIC_DIFY_API_URL=https://api.dify.ai/v1

# 開発モード設定
# trueに設定するとモックデータを使用します
NEXT_PUBLIC_USE_MOCK_DATA=false

# 環境指定（development/production/demo）
NEXT_PUBLIC_APP_ENV=development

# カスタムエンドポイント設定（必要な場合）
# NEXT_PUBLIC_CUSTOM_ENDPOINT=https://your-custom-endpoint.com/api

# 機能停止モード設定
# trueに設定するとメンテナンスモードになり、全機能が停止します
NEXT_PUBLIC_MAINTENANCE_MODE=false
# メンテナンス時に表示するメッセージ
NEXT_PUBLIC_MAINTENANCE_MESSAGE=ただいまシステムメンテナンス中です。ご不便をおかけして申し訳ありません。 

