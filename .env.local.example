# Frontend (MSAL / Entra ID / B2C)
NEXT_PUBLIC_FRONTEND_CLIENT_ID=your-frontend-client-id
NEXT_PUBLIC_API_CLIENT_ID=your-api-app-client-id
NEXT_PUBLIC_TENANT=your-tenant-id-or-name
# For B2C/CIAM: set full authority, user flow, and known authorities
NEXT_PUBLIC_AUTHORITY=https://yourtenant.b2clogin.com/yourtenant.onmicrosoft.com/B2C_1_signupsignin
NEXT_PUBLIC_USER_FLOW=B2C_1_signupsignin
NEXT_PUBLIC_B2C_DOMAIN=yourtenant.b2clogin.com
NEXT_PUBLIC_KNOWN_AUTHORITIES=yourtenant.b2clogin.com
NEXT_PUBLIC_REDIRECT_URI=http://localhost:3000
NEXT_PUBLIC_POST_LOGOUT_URI=http://localhost:3000
NEXT_PUBLIC_MSAL_CACHE_LOCATION=sessionStorage
NEXT_PUBLIC_MSAL_STORE_AUTH_STATE_IN_COOKIE=false
NEXT_PUBLIC_MSAL_ENABLE_VERBOSE_LOGGING=false

# Azure Functions
NEXT_PUBLIC_AZURE_FUNCTION_URL=http://localhost:7071

# Azure Storage
NEXT_PUBLIC_AZURE_STORAGE_ACCOUNT=your-storage-account
NEXT_PUBLIC_AZURE_STORAGE_KEY=your-storage-key

# API Management (optional)
NEXT_PUBLIC_AZURE_APIM_URL=
NEXT_PUBLIC_AZURE_APIM_SUBSCRIPTION_KEY=

# App settings
NEXT_PUBLIC_AZURE_LOCATION=eastus
NEXT_PUBLIC_AZURE_RESOURCE_GROUP=your-rg
NEXT_PUBLIC_MAINTENANCE_MODE=false
NEXT_PUBLIC_MAINTENANCE_MESSAGE=System maintenance in progress.

# Azure Functions app settings (backend)
AUTH_TENANT_ID=your-tenant-id
AUTH_AUTHORITY= # optional; set full authority for B2C/CIAM
AUTH_AUDIENCE=api://your-api-app-client-id
AUTH_REQUIRED_SCOPES=access_as_user

AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-openai-key
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini
WHISPER_DEPLOYMENT_NAME=whisper-1

AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-storage-key
AZURE_STORAGE_INPUT_CONTAINER=transcripts
AZURE_STORAGE_OUTPUT_CONTAINER=outputs

COSMOS_DB_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
COSMOS_DB_KEY=your-cosmos-key
COSMOS_DB_DATABASE_NAME=AppDb

WEB_PUBSUB_CONNECTION_STRING=your-webpubsub-connection-string
WEBPUBSUB_HUB_NAME=updates

# Cleanup
CLEANUP_AGE_HOURS=72
